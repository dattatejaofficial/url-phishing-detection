{
  "manifest_version": 3,
  "name": "Phishing URL Detector",
  "version": "1.0.0",
  "description": "Warns users when a visited URL is detected as phishing using Machine Learning",

  "permissions": [
    "webNavigation",
    "tabs",
    "storage",
    "sidePanel"
  ],

  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1:8000/*"
  ],

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "side_panel": {
    "default_path": "panel/panel.html"
  },

  "action": {
    "default_title": "Phishing Detector"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start"
    }
  ]
}
